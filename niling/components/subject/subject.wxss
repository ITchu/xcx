/* components/subject/subject.wxss */

.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.tab-item {
  margin: 0 36rpx;
  display: inline-block;
}

.tab-item.active {
  color: #f9759a;
  position: relative;
}

/**
http://www.runoob.com/cssref/sel-after.html
:after 选择器向选定的元素之后插入内容。
*/

.tab-item.active:after {
  content: "";
  display: block;
  height: 6rpx;
  width: 100%;
  background: #f9759a;
  position: absolute;
  bottom: 0;
  align-self: center;
  border-radius: 16rpx;
}

.line {
  margin-top: 80rpx;
  width: 100%;
  height: 2rpx;
  background: #f2f2f2;
}

.item-ans {
  width: 100%;
  margin-top: 40rpx;
}

.card {
  border: 2rpx solid #fff;
  border-radius: 30rpx;
  background-color: #fff;
  box-shadow: 1px 1px 1px 1px #ccc;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.pic {
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  width: 690rpx;
  height: 300rpx;
}

.title {
}

.tab-content {
  margin-top: 1rpx;
}

.scoll-h {
  height: 100%;
}
